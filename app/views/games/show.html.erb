<div class="game center">
  <h3><%= @game.date %> @ <%= @game.time %></h3>
  <h4><%= @game.league.name %></h4>
  <div class="row">
    <div class="col-md-12 text-center">
      <div class="inline-block padding-20">
        <h4>Field</h4>
        <div><%= @game.field.name %></div>
      </div>
      <div class="inline-block padding-20">
        <h4>Location</h4>
        <div><%= @game.field.location %></div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <h4><%= "#{@game.team1.name} (#{@game.team_stats1.goals || 0} goals)" %></h4>
      <%= render partial: "stats/game", locals: { stats: @game.team_stats1 } %>
    </div>
    <div class="col-md-6">
      <h4><%= "#{@game.team2.name} (#{@game.team_stats2.goals || 0} goals)" %></h4>
      <%= render partial: "stats/game", locals: { stats: @game.team_stats2 } %>
    </div>
  </div>
</div>
