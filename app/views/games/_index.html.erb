<table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Time</th>
      <th>Teams</th>
      <th>Field</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% games.each do |game| %>
      <tr>
        <td><%= game.date %></td>
        <td><%= game.time %></td>
        <td><%= game.field.name %></td>
        <td><%= game.team1.name %></td>
        <td><%= game.team2.name %></td>
        <td class="btn-group">
          <%= link_to "View", game_path(game), :class => "btn btn-success" %>
          <%= link_to "Edit", edit_game_path(game), :class => "btn btn-primary" %>
          <%= link_to "Delete", game_path(game), :method => :delete, :class => "btn btn-danger", :confirm => "Are you sure you want to delete this game?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
