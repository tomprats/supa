<table class="table">
  <thead>
    <tr>
      <th>League</th>
      <th>Partner 1</th>
      <th>Comment</th>
      <th>Partner 2</th>
      <th>Comment</th>
      <th>Approval</th>
    </tr>
  </thead>
  <tbody>
    <% baggages.each do |baggage|%>
      <tr>
        <td><%= baggage.league.name %></td>
        <td><%= baggage.partner1.name %></td>
        <td><%= baggage.comment1 %></td>
        <td><%= baggage.partner2.name %></td>
        <td><%= baggage.comment2 %></td>
        <td>
          <% if baggage.approved %>
            <%= link_to "Disapprove", approve_super_baggage_path(baggage.id), method: :post, class: "btn btn-primary" %>
          <% else %>
            <%= link_to "Approve", approve_super_baggage_path(baggage.id), method: :post, class: "btn btn-primary" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
