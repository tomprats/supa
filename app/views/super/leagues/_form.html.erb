<% if @league
  url = super_league_path(@league.id)
else
  @league = League.new
  url = super_leagues_path
end %>

<%= form_for(@league, url: url, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :season, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :season, options_for_select(League.season_collection, @league.try(:season)), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :year, options_for_select(League.year_collection, @league.try(:year)), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :price, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :price, options_for_select((0..30).step(5), @league.try(:price).to_i), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :late_price, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :late_price, options_for_select((0..30).step(5), @league.try(:late_price).to_i), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :state, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :state, options_for_select(League.state_collection, @league.try(:state)), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :current, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :current, options_for_select({ "True" => true, "False" => false }, @league.try(:current)), {}, { class: "form-control" } %>
    </div>
  </div>
  <%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>
