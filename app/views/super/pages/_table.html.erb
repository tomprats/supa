<table class="data-table table table-striped table-responsive">
  <thead>
    <tr>
      <th>Name</th>
      <th>Path</th>
      <th>Importance</th>
      <th>Creator</th>
      <th class="dont-sort"></th>
    </tr>
  </thead>
  <tbody>
    <% pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.path %></td>
        <td><%= page.importance %></td>
        <td><%= page.creator.name %></td>
        <td class="btn-group">
          <%= link_to "View", page_path(page.path), class: "btn btn-success" %>
          <%= link_to "Edit", edit_super_page_path(page), class: "btn btn-primary" %>
          <%= link_to "Delete", super_page_path(page), method: :delete, class: "btn btn-danger", confirm: "Are you sure you want to delete this page?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
