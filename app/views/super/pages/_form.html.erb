<% if @page
  url = super_page_path(@page.id)
else
  @page = Page.new
  url = super_pages_path
end %>

<%= form_for(@page, url: url, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :path, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :path, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :importance, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.number_field :importance, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <p class="col-md-8 col-md-offset-4">The page will show up in the navbar (with the name as the link text) if the importance is greater than 0.</p>
  </div>
  <div class="form-group">
    <%= f.label :text, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_area :text, { rows: 10, class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <p class="col-md-8 col-md-offset-4">The text is written in markup, syntax is pretty simple (and easy to Google).</p>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
