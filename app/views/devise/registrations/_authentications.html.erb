<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="col-md-12 center">
        <h3>Authentications</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 center">
        <%= fa_icon "facebook-square" %>
        <% if @facebook %>
          <%= link_to "Disable?", @facebook, data: { confirm: "Are you sure?" }, method: :delete %>
        <% else %>
          <%= link_to "Enable?", user_omniauth_authorize_path(:facebook) %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 center">
        <%= fa_icon "twitter" %>
        <% if @twitter %>
          <%= link_to "Disable?", @twitter, data: { confirm: "Are you sure?" }, method: :delete %>
        <% else %>
          <%= link_to "Enable?", user_omniauth_authorize_path(:twitter) %>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-12 center">
        <% if @password %>
          <%= fa_icon "check-square" %>
          Password Enabled
        <% else %>
          <%= fa_icon "unlock" %>
          Password Disabled
        <% end %>
      </div>
    </div>
  </div>
</div>
