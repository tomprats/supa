<div class="row-fluid">
  <div class="span7">
    <div class="row-fluid">
      <div class="span12">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
      </div>
    </div>

    <%= render :partial => "shared/registrations_form" %>
  </div>

  <div class="span5">
    <%= render :partial => "shared/authentications"%>

    <div class="row-fluid">
      <div class="span12 center">
        <h3>Unhappy?</h3>
        <div class="row-fluid">
          <div class="span12">
            <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, :class => "btn btn-danger" %>
          </div>
        </div>
        <%= link_to "Home", home_path, :class => "btn btn-success"  %>
      </div>
    </div>
  </div>
</div>
