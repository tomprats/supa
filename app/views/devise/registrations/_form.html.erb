<% if action_name == "new" || action_name == "create" %>
  <% method = "post" %>
<% else %>
  <% method = "put" %>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: method, class: "form-horizontal" }) do |f| %>
  <% if action_name == "new" || action_name == "create" %>
    <div class="form-group">
      <%= f.label :email, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :email, { class: "form-control" } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password, { class: "form-control" } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, { class: "form-control" } %>
      </div>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.label :email, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :email, { readonly: true, class: "form-control" } %>
      </div>
    </div>
    <% if @password %>
      <div class="form-group">
        <%= f.label :current_password, class: "col-md-4 control-label" %>
        <div class="col-md-8">
          <%= f.password_field :current_password, { class: "form-control" } %>
        </div>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :password, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password, { class: "form-control" } %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.password_field :password_confirmation, { class: "form-control" } %>
      </div>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :first_name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :first_name, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :last_name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :last_name, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gender, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :gender, { "Male" => :male, "Female" => :female }, {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :experience, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :experience, { "0" => "0 years", "1-2" => "1-2 years", "3-4" => "3-4 years", "6++" => "6++ years" }, {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :phone_number, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :phone_number, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :shirt_size, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :shirt_size, User.shirt_sizes, {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :birthday, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <% if f.object.birthday %>
        <%= f.text_field :birthday, { value: localize(f.object.birthday), class: "form-control" } %>
      <% else %>
        <%= f.text_field :birthday, { value: "", class: "form-control" } %>
      <% end %>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
