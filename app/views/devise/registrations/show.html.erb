<div class="row-fluid">
  <div class="span6">
    <div class="row-fluid">
      <div class="span12">
        <%= link_to 'Edit profile', edit_user_registration_path %> |
        <%= link_to "Logout", sign_out_path, method: :delete %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h3>Sign Up for Spring 2014</h3>
        <% if @user.spring_registered? %>
          <%= link_to "Registered", "#", :class => "btn"  %>
        <% else %>
          <%= link_to "Register", register_path, :class => "btn btn-success"  %>
        <% end %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h3>Teams</h3>
        <% if @user.teams.empty? %>
          <p>You aren't signed up for any teams yet, sorry!</p>
        <% else %>
          <%= render :partial => "shared/teams", :locals => { :teams => @user.teams } %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="span6">
    <%= render :partial => "shared/authentications"%>
    <div class="row-fluid">
      <div class="span12 center">
        <%= link_to "Home", home_path, :class => "btn btn-success"  %>
      </div>
    </div>
  </div>
</div>
