<div class="row-fluid">
  <div class="span6">
    <div class="row-fluid">
      <div class="span12">
        <%= link_to 'Edit profile', edit_user_registration_path %> |
        <%= link_to "Logout", destroy_user_session_path, method: :delete %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span12">
        <h3>Teams</h3>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Captain</th>
            </tr>
          </thead>
          <tbody>
          <% if @user.teams.each do |team| %>
            <tr>
              <td><%= team.name %></td>
              <td><%= User.find(team.captain).name %></td>
            </tr>
          <% end.empty? %>
            <p>You aren't signed up for any teams yet, sorry!</p>
          <% end %>
        </table>
      </div>
    </div>
  </div>

  <div class="span6">
    <%= render :partial => "shared/authentications"%>
    <div class="row-fluid">
      <div class="span12 center">
        <%= link_to "Home", home_path, :class => "btn btn-success"  %>
      </div>
    </div>
  </div>
</div>
