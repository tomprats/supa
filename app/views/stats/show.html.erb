<div class="game center">
  <h3><%= @game.date %> @ <%= @game.time %></h3>
  <div class="row">
    <div class="col-md-6">
      <h4><%= "#{@game.team1.name} (#{@game.team_stats1.goals || 0} goals)" %></h4>
      <%= render partial: "stats/table", locals: { stats: @game.team_stats1 } %>
    </div>
    <div class="col-md-6">
      <h4><%= "#{@game.team2.name} (#{@game.team_stats2.goals || 0} goals)" %></h4>
      <%= render partial: "stats/table", locals: { stats: @game.team_stats2 } %>
    </div>
  </div>
</div>
