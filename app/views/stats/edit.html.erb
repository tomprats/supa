<%= simple_form_for(@game, url: game_stats_path(@game.id)) do |f| %>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">
      <span>Edit Stats</span>
    </h3>
  </div>

  <div class="modal-body">
    <div class="row-fluid">
      <div class="span5">
        <%= f.input :winner_id, as: :select, include_blank: false, collection: @game.teams %>
      </div>
      <div class="span5 offset1">
        <%= f.input :loser_id, as: :select, include_blank: false, collection: @game.teams %>
      </div>
    </div>

    <div class="row-fluid">
      <ul class="nav nav-pills">
        <li class="active"><a href="#team1" data-toggle="tab">Team 1</a></li>
        <li><a href="#team2" data-toggle="tab">Team 2</a></li>
      </ul>

      <div id="my-tab-content" class="tab-content">
        <div class="tab-pane active" id="team1">
          <%= f.simple_fields_for :team_stats1 do |stats| %>
            <div class="row-fluid">
              <span>Player's Assists/Goals</span> <i class="add-player1 icon-plus-sign"></i>
            </div>
            <div class="players">
              <%= stats.simple_fields_for :player_stats, html: { class: 'form-horizontal' } do |player| %>
                <div class="row-fluid">
                  <%= player.input_field :player_id, as: :select, collection: @game.team1.players %>
                  <%= player.input_field :assists, placeholder: "Assists", class: "width-60" %>
                  <%= player.input_field :goals, placeholder: "Goals", class: "width-60" %>
                  <%= player.input_field :_destroy, class: "auto-width", as: :select, include_blank: false, collection: [["Present", false], ["Absent", true]] %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>

        <div class="tab-pane" id="team2">
          <%= f.simple_fields_for :team_stats2 do |stats| %>
            <div class="row-fluid">
              <span>Player's Assists/Goals</span> <i class="add-player2 icon-plus-sign"></i>
            </div>
            <div class="players">
              <%= stats.simple_fields_for :player_stats, html: { class: 'form-horizontal' } do |player| %>
                <div class="row-fluid">
                  <%= player.input_field :player_id, as: :select, collection: @game.team2.players %>
                  <%= player.input_field :assists, placeholder: "Assists", class: "width-60" %>
                  <%= player.input_field :goals, placeholder: "Goals", class: "width-60" %>
                  <%= player.input_field :_destroy, class: "auto-width", as: :select, include_blank: false, collection: [["Present", false], ["Absent", true]] %>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <%= f.submit "Save", class: "btn btn-primary" %>
    <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
<% end %>
