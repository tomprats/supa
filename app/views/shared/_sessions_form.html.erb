<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "wide" }) do |f| %>
  <div class="row-fluid">
    <div class="span5">
      <%= f.input :email %>
    </div>
    <div class="span5 offset1">
      <%= f.input :password %>
    </div>
  </div>
  <%= f.button :submit, :class => "btn btn-primary" %>
<% end %>
