<div id="drafts_order_modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Set Order</h3>
  </div>
  <div class="modal-body">
    <% @drafts.each do |draft| %>
      <div id="draft<%= draft.id %>" class="draft-order center hide">
        <%= form_tag(draft_order_path(draft.id), method: :post) do %>
          <ol>
            <% if draft.order %>
              <% draft.captains.each_with_index do |captain, index| %>
                <li><%= select("order", index, draft.captains.collect { |c| [c.name, c.id] },
                               selected: draft.order[index]) %></li>
              <% end %>
            <% else %>
              <% draft.captains.each_with_index do |captain, index| %>
                <li><%= select("order", index, draft.captains.collect { |c| [c.name, c.id] }) %></li>
              <% end %>
            <% end %>
          </ol>
          <br>
          <%= submit_tag("Submit", :class => "btn btn-primary") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
