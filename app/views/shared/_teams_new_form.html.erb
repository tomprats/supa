<%= form_for(@team, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :captain_id, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :captain_id, options_for_select(@team.captain_collection), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :season, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :season, options_for_select(@team.season_collection), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :year, options_for_select(@team.year_collection), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, "Image (as URL)",class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :image, { class: "form-control" } %>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
