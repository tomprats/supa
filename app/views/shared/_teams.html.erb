<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Season</th>
      <th>Year</th>
      <th>Captain</th>
      <th>Players</th>
      <th>Active</th>
    </tr>
  </thead>
  <tbody>
    <% teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.season %></td>
        <td><%= team.year %></td>
        <td><%= team.captain.name %></td>
        <td><%= team.players.count %></td>
        <td><%= team.active %></td>
        <% if action_name == "standard" || action_name == "super" %>
          <td class="btn-group">
            <%= link_to "View", team_path(team), class: "btn btn-success" %>
            <%= link_to "Edit", edit_team_path(team), class: "btn btn-primary" %>
            <%= link_to "Delete", team_path(team), method: :delete, class: "btn btn-danger", confirm: "Are you sure you want to delete this team?" %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
