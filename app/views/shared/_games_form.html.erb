<%= simple_form_for(@game) do |f| %>
  <div class="row-fluid">
    <div class="span5">
      <%= f.input :winner_id, :as => :select, :collection => Team.active %>
    </div>
    <div class="span5 offset1">
      <%= f.input :loser_id, :as => :select, :collection => Team.active %>
    </div>
  </div>

  <div class="row-fluid">
    <ul class="nav nav-pills">
      <li class="active"><a href="#winners" data-toggle="tab">Winners</a></li>
      <li><a href="#losers" data-toggle="tab">Losers</a></li>
    </ul>

    <div id="my-tab-content" class="tab-content">
      <div class="tab-pane active" id="winners">
        <%= f.simple_fields_for :team_stats1 do |stats| %>
          <div class="row-fluid">
            <span>Winners/Assists/Points</span> <i class="add-winner icon-plus-sign"></i>
          </div>
          <div class="row-fluid">
            <%= stats.simple_fields_for :player_stats, :html => { :class => 'form-horizontal' } do |player| %>
              <%= player.input_field :player_id, :as => :select, :collection => User.all %>
              <%= player.input_field :assists %>
              <%= player.input_field :points %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="tab-pane" id="losers">
        <%= f.simple_fields_for :team_stats2 do |stats| %>
          <div class="row-fluid">
            <span>Losers/Assists/Points</span> <i class="add-loser icon-plus-sign"></i>
          </div>
          <div class="row-fluid">
            <%= stats.simple_fields_for :player_stats, :html => { :class => 'form-horizontal' } do |player| %>
              <%= player.input_field :player_id, :as => :select, :collection => User.all %>
              <%= player.input_field :assists %>
              <%= player.input_field :points %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%= f.button :submit, "Submit", :class => "btn btn-primary" %>
<% end %>
