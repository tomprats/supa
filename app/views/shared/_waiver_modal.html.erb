<div id="waiver-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
        <h3 id="myModalLabel">Waiver Agreement</h3>
      </div>
      <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
              <% waiver = image_path "waiver.pdf" %>
              <object data="<%= waiver%>" type="application/pdf" width="100%" height="600px">
                alt : <a href="<%= waiver%>"><%= waiver%></a>
              </object>
            </div>
          </div>
        <div class="form-group">
          <div class="checkbox">
            <label>
              <%= check_box_tag :agree %>
              By checking this box, I have read and agree to the terms of this waiver
            </label>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <%= link_to "Register", register_path(@league.id), class: "btn btn-primary waiver-register", disabled: true %>
        <button class="btn btn-default" data-dismiss="modal" aria-hidden="true">Cancel</button>
      </div>
    </div>
  </div>
</div>
