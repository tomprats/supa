<%= form_for(@team, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :name, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :captain_id, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :captain_id, options_for_select(@team.captain_collection.collect {|a| [a.name, a.id]}), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :season, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :season, options_for_select(@team.season_collection), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :year, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :year, options_for_select(@team.year_collection), {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :color, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :color, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :image, "Image (as URL)", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :image, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :players, class: "col-md-12 control-label" %>
    <div class="col-md-12">
      <%= f.select :players, options_for_select(User.registered.collect {|a| [a.name, a.id]}), {}, { multiple: true, id: "searchable", class: "form-control" } %>
    </div>
  </div>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
