<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <h3>Player Awards</h3>
    </div>
    <% index = 0 %>
    <div class="row">
      <% @awards.each do |key, value| %>
        <% if index % 3 == 0 && !index.zero? %>
          </div><div class="row">
        <% end %>
        <% index += 1 %>
        <div class="col-sm-4 padding-20">
          <h4><%= key.to_s.titleize %></h4>
          <% value.delete(nil) %>
          <% sorted = value.sort_by { |k,v| v }.reverse %>
          <% sorted.select { |user| user.last == sorted.first.last }.each do |user| %>
            <div class="row">
              <div class="col-md-9">
                <%= User.find(user.first).name %>
              </div>
              <div class="col-md-3 text-right">
                <%= user.last %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
    <div class="row">
      <h3>Ideas</h3>
    </div>
    <% PlayerAward.all.select { |p| !p.ideas.blank? }.each do |p| %>
      <div class="row padding-20">
        <%= p.ideas %>
      </div>
    <% end %>
  </div>
</div>
