<%= form_for(@event, url: admin_events_path, html: { class: "form-horizontal" }) do |f| %>
  <div class="form-group">
    <%= f.label :league, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :league_id, League.all.collect {|a| [a.name, a.id]}, {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :date, "Date", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= text_field_tag "event[date]", "", class: "form-control", data: { value: @event.try(:date) }  %>
    </div>
  </div>
  <div class="form-group">
    <%= label_tag :time, "Time", class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= text_field_tag "event[time]", "", class: "form-control", data: { value: @event.try(:time) }  %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :field_id, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.select :field_id, Field.all.collect {|a| [a.name, a.id]}, {}, { class: "form-control" } %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :title, class: "col-md-4 control-label" %>
    <div class="col-md-8">
      <%= f.text_field :title, { class: "form-control" } %>
    </div>
  </div>
  <% unless @event.game %>
    <div class="form-group">
      <%= f.label :text, class: "col-md-4 control-label" %>
      <div class="col-md-8">
        <%= f.text_field :text, { class: "form-control" } %>
      </div>
    </div>
  <% end %>
  <%= f.submit "Submit", class: "btn btn-primary" %>
<% end %>
