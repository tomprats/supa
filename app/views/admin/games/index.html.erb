<ul class="nav nav-pills">
  <li class="active"><a href="#recent-games" data-toggle="tab">Recent Games</a></li>
  <li><a href="#current-games" data-toggle="tab">Current Games</a></li>
  <li><a href="#all-games" data-toggle="tab">All Games</a></li>

  <div class="btn-group pull-right">
    <%= link_to "Add Game", "#games_new_modal", class: "admin_modal btn btn-primary", role: "button", data: { toggle: "modal" } %>
  </div>
</ul>

<div id="games-content" class="tab-content">
  <div class="tab-pane active" id="recent-games">
    <div class="row">
      <div class="col-md-12">
        <h3>Recent Games</h3>
        <% if @recent_games.empty? %>
          <p>There aren't any past games!</p>
        <% else %>
          <%= render partial: "admin/games/table", locals: { games: @recent_games } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="current-games">
    <div class="row">
      <div class="col-md-12">
        <h3>Current Games</h3>
        <% if @current_games.empty? %>
          <p>There aren't any games for the current league yet!</p>
        <% else %>
          <%= render partial: "admin/games/table", locals: { games: @current_games } %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="tab-pane" id="all-games">
    <div class="row">
      <div class="col-md-12">
        <h3>All Games</h3>
        <% if @games.empty? %>
          <p>There aren't any games yet!</p>
        <% else %>
          <%= render partial: "admin/games/table", locals: { games: @games } %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<%= render partial: "admin/games/new_modal" %>
<%= render partial: "admin/stats/modal" %>
