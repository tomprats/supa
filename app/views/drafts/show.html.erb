<div class="draft">
  <div class="row">
    <div class="col-md-12">
      <h3 class="center">
        <span>Draft: <%= @draft.id %></span>
        <span><%= @draft.season %> <%= @draft.year %></span>
      </h3>
      <h4 class="center">
        <% if !@draft.active? %>
          <span class="red">The draft has not started yet</span>
        <% elsif @draft.my_turn?(current_user) %>
          <span class="captains-turn">Captain's Turn: <%= @draft.captains_turn %></span>
        <% else %>
          <span>Captain's Turn: <%= @draft.captains_turn %></span>
        <% end %>
        <span>Round: <%= @draft.round %></span>
      </h4>
      <% if @draft.active? %>
        <h5 class="center check" data-id="<%= @draft.id %>" data-turn="<%= @draft.turn %>">
          Auto-refresh? <%= check_box_tag("accept") %>
        </h5>
      <% end %>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col-md-8 col-md-offset-2 group">
      <h4>Drafted Players</h4>
      <div class="row">
        <h5 class="col-md-3">Player</h5>
        <h5 class="col-md-2">Round</h5>
        <h5 class="col-md-3">Phone Number</h5>
        <h5 class="col-md-4">Email</h5>
      </div>
      <div class="row">
        <div class="col-md-12">
          <% if current_user.captains_team.drafted_players.empty? %>
            <div>There are no players yet!</div>
            <br>
          <% else %>
            <% current_user.captains_team.drafted_players.each do |dp| %>
              <div class="row">
                <div class="col-md-3"><%= dp.player.name %></div>
                <div class="col-md-3"><%= dp.round %></div>
                <div class="col-md-3"><%= dp.player.phone_number %></div>
                <div class="col-md-3"><%= dp.player.email %></div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div id="add" class="col-md-8 col-md-offset-2 group">
      <h4>Add Group</h4>
      <%= form_for(@group, html: { class: "form-horizontal" } ) do |f| %>
        <div class="form-group">
          <div class="col-md-12">
            <%= f.text_field :name, { placeholder: "Name", class: "form-control text-center" } %>
          </div>
          <%= f.hidden_field :draft_id %>
          <%= f.hidden_field :captain_id %>
        </div>
        <div class="form-group">
          <h5 class="col-md-3">Player</h5>
          <h5 class="col-md-3">Position</h5>
          <h5 class="col-md-3">Rating</h5>
          <h5 class="col-md-3">Info</h5>
        </div>
        <%= f.fields_for :draft_players do |player| %>
          <div class="form-group">
            <div class="col-md-3">
              <%= player.select :player_id, @users.collect {|a| [a.name, a.id]}, {}, { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= player.text_field :position, { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= player.number_field :rating, { class: "form-control" } %>
            </div>
            <div class="col-md-3">
              <%= player.text_area :info, { class: "form-control" } %>
            </div>
          </div>
        <% end %>
        <div class="form-group center">
          <div class="col-md-12">
            <%= link_to "+", "#", class: "btn btn-success add-player" %>
            <%= f.submit "Update", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
    <% @groups.each_with_index do |group, index| %>
      <div class="row">
        <div id="readonly<%= group.id %>" class="col-md-8 col-md-offset-2 group readonly">
          <h4><%= "#{group.name}" %></h4>
          <div class="row">
            <h5 class="col-md-3">Player</h5>
            <h5 class="col-md-2">Position</h5>
            <h5 class="col-md-2">Rating</h5>
            <h5 class="col-md-2">Info</h5>
            <h5 class="col-md-3"></h5>
          </div>
          <div class="row">
            <div class="col-md-12">
              <% if group.draft_players.empty? %>
                <div>There are no players yet!</div>
                <br>
              <% else %>
                <% group.draft_players.each do |dp| %>
                  <div class="row">
                    <div class="col-md-3"><%= dp.player.name %></div>
                    <div class="col-md-2"><%= dp.position %></div>
                    <div class="col-md-2"><%= dp.rating %></div>
                    <div class="col-md-2"><%= dp.info %></div>
                    <div class="col-md-3 pull-right btn-group">
                      <% if dp.player.drafted?(@draft.id)%>
                        <%= link_to "Drafted", "#", :class => "btn btn-default" %>
                      <% else %>
                        <%= link_to "Draft", drafted_player_path(dp.id), method: :put, class: "btn btn-primary" %>
                      <% end %>
                      <%= link_to "x", draft_player_path(dp.id), method: :delete, data: { confirm: "Are you sure you want to remove this player from this draft group?" }, class: "btn btn-danger" %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
          <div class="row center">
            <div class="col-md-12">
              <%= link_to "Edit", "#", data: { id: group.id, type: "readonly", not: "editable" }, class: "btn btn-primary normal" %>
              <%= link_to "Delete", draft_group_path(group.id), method: :delete, data: { confirm: "Are you sure you want to delete this draft group?" }, class: "btn btn-danger normal" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <div>
    <% @groups.each_with_index do |group, index| %>
      <% group.draft_players.build %>
      <div class="row">
        <div id="editable<%= group.id %>" class="col-md-8 group col-md-offset-2 editable hide">
          <h4>Edit Group</h4>
          <%= form_for(group, html: { class: "form-horizontal" } ) do |f| %>
            <div class="form-group">
              <div class="col-md-12">
                <%= f.text_field :name, { class: "form-control text-center" } %>
              </div>
              <%= f.hidden_field :draft_id %>
              <%= f.hidden_field :captain_id %>
            </div>
            <div class="row">
              <h5 class="col-md-3">Player</h5>
              <h5 class="col-md-3">Position</h5>
              <h5 class="col-md-3">Rating</h5>
              <h5 class="col-md-3">Info</h5>
            </div>
            <%= f.fields_for :draft_players do |player| %>
              <div class="form-group add-here">
                <div class="col-md-3">
                  <%= player.select :player_id, @users.collect {|a| [a.name, a.id]}, {}, { class: "form-control" } %>
                </div>
                <div class="col-md-3">
                  <%= player.text_field :position, { class: "form-control" } %>
                </div>
                <div class="col-md-3">
                  <%= player.number_field :rating, { class: "form-control" } %>
                </div>
                <div class="col-md-3">
                  <%= player.text_area :info, { class: "form-control" } %>
                </div>
              </div>
            <% end %>
            <div class="row center">
              <div class="col-md-12">
                <%= link_to "Show", "#", data: { id: group.id, type: "readonly", not: "editable" }, class: "btn btn-primary" %>
                <%= link_to "+", "#", data: { id: group.id }, class: "btn btn-success add-player" %>
                <%= f.submit "Update", class: "btn btn-primary" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
