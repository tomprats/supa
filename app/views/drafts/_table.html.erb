<table class="table">
  <thead>
    <tr>
      <th>League</th>
      <th>Active</th>
      <th>Order</th>
      <th>Snake</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% drafts.each do |draft|%>
      <tr>
        <td><%= draft.league.name %></td>
        <td>
          <% if draft.active? %>
            <%= link_to "Deactivate", activate_draft_path(draft.id, active: false), class: "btn btn-success" %>
          <% else %>
            <%= link_to "Activate", activate_draft_path(draft.id, active: true), class: "btn btn-success" %>
          <% end %>
        </td>
        <td><%= link_to "Edit", "#drafts_order_modal", class: "admin_modal btn btn-success", role: "button", data: { id: draft.id, toggle: "modal" } %>
        </td>
        <td>
          <% if draft.snake? %>
            <%= link_to "Turn off", snake_draft_path(draft.id, snake: false), class: "btn btn-success" %>
          <% else %>
            <%= link_to "Turn on", snake_draft_path(draft.id, snake: true), class: "btn btn-success" %>
          <% end %>
        </td>
        <td class="btn-group">
          <%= link_to "Feed", feed_path(draft.id), class: "btn btn-primary" %>
          <%= link_to "Delete", draft_path(draft.id), method: :delete, class: "btn btn-danger", confirm: "Are you sure you want to delete this draft?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render partial: "drafts/order_modal" %>
