<div class="draft">
  <h3 class="center">Drafts</h3>
  <br>
  <% if @drafts.empty? %>
    <div class="center">The teams you captain are not draftable yet.</div>
  <% else %>
    <% @drafts.each_with_index do |draft, index| %>
      <div class="row center">
        <div class="col-md-6 col-md-offset-3">
          <div class="btn-group pull-left">
            <%= link_to "Draft #{draft.id}", "#", class: "btn btn-default" %>
            <%= link_to "View", draft_path(draft.id), class: "btn btn-primary" %>
            <%= link_to "Feed", feed_path(draft.id), class: "btn btn-warning" %>
            <%= link_to "Team: #{@teams[index].name}", team_path(@teams[index].id), :class => "btn btn-success" %>
          </div>
        </div>
      </div>
      <br>
    <% end %>
  <% end %>
</div>
