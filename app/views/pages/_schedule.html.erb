<% if !@events.empty? %>
  <br>
  <div class="center schedule">
    <h3>Schedule</h3>
    <div class="row">
      <div class="col-md-12">
        <table class="table table-bordered center-th">
          <thead>
            <th></th>
            <th>Date</th>
            <th>Time</th>
            <th>Field</th>
            <th>Event</th>
          </thead>
          <% @events.each do |event| %>
            <tbody>
              <td><%= event.title %></td>
              <td><%= event.date %></td>
              <td><%= event.time %></td>
              <td><%= event.field.name %></td>
              <td><%= event.text || event.game.name %></td>
            </tbody>
          <% end %>
        </table>
      </div>
    </div>
  </div>
<% end %>
